#!/usr/bin/env bash
# Installs nginx and sets up a custom home page

# Exit on any error
set -e

# Install nginx silently
apt-get update -y
apt-get install -y nginx

# Ensure nginx is listening on port 80 (default config does this)
# Replace default index page content
echo "Holberton School for the win!" > /var/www/html/index.html

# Restart nginx using service command (since systemctl is not allowed)
service nginx restart
